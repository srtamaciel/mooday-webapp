{{!-- Create your own mood form --}}
<div class="container-mood">
  <div class="form-container">
    <h1>How are you today?</h1>
    <p>{{date}}</p>
    <form action="/mood/new/{{date}}" method="POST">
      <div class="input">

        <label for="mood"></label>
        <input type="text" name="mood">

        <a class="btn"><button type="submit">Create your mood!</button></a>

      </div>
    </form>
  </div>
  <div class="form-container">
    <h1>Tell me more </h1>
    {{!-- <p>{{date}}</p> --}}
    <form action="/mood/new/{{date}}" method="POST">
      <div class="input">

        <label for="diary"></label>
        <textarea class="text-area" type="text" name="diary" rows="10" cols="50"></textarea>
        {{!-- <input id="input-diary" type="text" name="diary"> --}}

        <a class="btn"><button type="submit">Save</button></a>

      </div>
    </form>
  </div>
</div>

{{!-- Each mood with his name, img (if it's a clicked one) and button to edit and delete --}}
<div class="your-day-mood">
  {{!-- <h3>Your day mood: </h3> --}}
  <ul>
    {{#each moods}}
    <div class="mood">
      <img class="doodle-mood" src="{{this.img}}" alt="{{this.img}}">
      <li>{{this.mood}}</li>
      {{!-- <p>{{this.diary}}</p> --}}
      <div class="text-diary">
         <p>{{this.diary}}</p>
      </div>
      {{!-- <li>{{this.date}}</li> --}}
      <div class="edit-delete-button">
        <div class="edit">
          <form action="/edit-mood/{{this._id}}" method="GET">
            <a class="delete-mood"><button type="submit"><i class="far fa-edit"></i></button></a>
          </form>
        </div>
        <div class="delete">
          <form class="form-delete-mood" action="/new/delete/{{_id}}" method="POST">
            <a class="delete-mood"><button type="submit"><i class="far fa-trash-alt"></i></button></a>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </ul>
</div>

{{#if errorMessage}}
<p>{{this.errorMessage}}</p> <a href=""></a>
{{/if}}
</div>

