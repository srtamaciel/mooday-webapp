<div class="edit-page-buttons">
<span><a href="/mood/new/{{result.date}}" class="btn navbar"><i class="fas fa-arrow-left"></i></a></span>

</div>

<div class="container-mood">
  <div class="form-container">
    
    <p>Edit your mood name</p>

    <form action="/edit-mood/{{result._id}}" method="POST">
      <div class="input">
    
        <label for="mood">{{result.mood}}</label>
        <input type="text" class="mood-input" name="mood">

        <a class="anchor-buttons"><button class="buttons" type="submit">Edit</button></a>

      </div>
    </form>
  </div>

