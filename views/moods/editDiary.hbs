<div class="edit-page-buttons">
<span><a href="/profile" class="btn navbar"><i class="fas fa-user"></i></a></span>
<span><a onclick="goBack()" class="btn navbar"><i class="fas fa-arrow-left"></i></a></span>
</div>

<div class="container-mood">
  <div class="form-container">
    
    <h1>Edit your diary</h1>

    <form action="/edit-diary/{{result._id}}" method="POST">
      <div class="input">

        <label for="diary">{{result.diary}}</label>
        <textarea class="text-area" type="text" name="diary" rows="10" cols="50"></textarea>

        <a class="btn"><button type="submit">Edit your diary</button></a>

      </div>
    </form>
  </div>

  {{#if errorMessage}}
  <p>{{this.errorMessage}}</p>
  {{/if}}
</div>